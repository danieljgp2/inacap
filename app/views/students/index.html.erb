<h1><%= @page_header %></h1>
<h2><%= notice %></h2>
<div class="row">
  <div class="col-md-4">
    <table class="table">
      <thead>
      <tr>
        <th>Name</th>
        <th>Last Name</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @students.each do |student| %>
          <tr>
            <td><%= student.name %></td>
            <td><%= student.last_name %></td>
            <td>
              <%= link_to 'Edit', edit_student_path(student), class: 'btn btn-warning' %>
              <%= link_to 'Delete', student_path(student), method: :delete, class: 'btn btn-danger' %>
            </td>
          </tr>
      <% end %>
      </tbody>
    </table>
    <%= link_to 'New', new_student_path, class: 'btn btn-info' %>
  </div>
</div>
